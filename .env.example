# TradePool Environment Configuration
# Copy this file to .env and fill in your values

# ===== TELEGRAM BOT CONFIGURATION =====
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Comma-separated list of admin Telegram user IDs
# Get your ID from @userinfobot
TELEGRAM_ADMIN_IDS=

# ===== SUI BLOCKCHAIN CONFIGURATION =====
# Sui RPC endpoint
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_NETWORK=testnet

# Contract addresses (set after deployment)
SUI_PACKAGE_ID=
SUI_REGISTRY_ID=
SUI_ADMIN_CAP_ID=

# ===== DATABASE CONFIGURATION =====
DB_NAME=tradepool
DB_USER=tradepool
DB_PASSWORD=changeme_strong_password_here

# External database port (for local connections)
POSTGRES_PORT=5432

# ===== REDIS CONFIGURATION =====
REDIS_PASSWORD=
REDIS_PORT=6379

# ===== SECURITY =====
# JWT secret for session management (generate random string)
JWT_SECRET=your_jwt_secret_here_change_me

# Encryption key for wallet private keys (MUST be exactly 32 characters)
# Generate with: openssl rand -base64 24
ENCRYPTION_KEY=

# ===== APPLICATION SETTINGS =====
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ===== EXPLORER =====
EXPLORER_BASE_URL=https://suiscan.xyz/testnet/tx/

# ===== OPTIONAL: PGADMIN =====
PGADMIN_EMAIL=admin@tradepool.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ===== OPTIONAL: PRICE FEEDS =====
COINGECKO_API_KEY=
